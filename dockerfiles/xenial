FROM ubuntu:16.04
RUN apt-get update && \
  apt-get -y install curl git build-essential apt-transport-https

RUN curl -L 'https://sorah.jp/packaging/debian/3F0F56A8.pub.txt' | apt-key add -
RUN echo "deb [arch=amd64] https://cache.ruby-lang.org/lab/sorah/deb/ xenial main" > /etc/apt/sources.list.d/sorah-ruby.list
RUN apt-get update && apt-get -y install ruby2.6 ruby2.6-dev ruby=1:2.6.0+0nkmi1~xenial && gem i bundler --no-doc

RUN git config --global user.email "ryota.arai+itamae@gmail.com" && \
  git config --global user.name "Itamae Builder"
ADD Gemfile* /work/
WORKDIR /work
RUN bundle install -j4 --path /bundle
ADD . /work/
